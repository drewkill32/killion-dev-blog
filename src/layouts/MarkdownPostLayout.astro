---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
const tags = frontmatter.tags as string[];
---

<BaseLayout pageTitle={frontmatter.title}>
  <p>Published on: {frontmatter.pubDate.slice(0, 10)}</p>
  <p><em>{frontmatter.descripton}</em></p>
  <p>Written by {frontmatter.author}</p>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
  <div class="tags">
    {
      tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
  <div class="blog-content">
    <slot />
  </div>
</BaseLayout>

<style>
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }
  img {
    max-width: 50vw;
    aspect-ratio: 16 /9;
    display: block;
    margin: 0 auto;
    object-fit: contain;
    aspect-ratio: 16 / 9;
    background-color: hsla(0, 0%, 72%, 0.062);
    box-shadow: 0px 5px 5px 0px rgba(0, 0, 0, 0.123);
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
